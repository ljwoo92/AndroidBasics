<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#283593"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3b479d">

        <TextView
            android:id="@+id/tvTimeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tvTime"
            android:layout_marginStart="16dp"
            android:text="AM"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/tvTimeType"
            android:text="5:40"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/swTimeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tvTime"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:id="@+id/cbRepeated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTime"
            android:layout_marginStart="16dp"
            android:background="#3b479d"
            android:checked="true"
            android:text="Repeated"
            android:textColor="#ffffff" />


        <ImageView
            android:id="@+id/imgBell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cbRepeated"
            android:layout_marginStart="16dp"
            android:src="@drawable/bell"
            android:contentDescription="bell image" />

        <TextView
            android:id="@+id/tvBell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgBell"
            android:layout_toEndOf="@id/imgBell"
            android:text="Helium"
            android:textColor="#ffffff" />

        <CheckBox
            android:id="@+id/cbVibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imgBell"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="Vibrate"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cbVibrate"
            android:layout_marginStart="16dp"
            android:text="Label"
            android:textColor="#ffffff" />

    </RelativeLayout>
</LinearLayout>
